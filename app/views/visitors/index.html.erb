<main role="main">
<h3>Welcome </h3>

<% if user_signed_in? %>
  <% if current_user.admin? %>
    <h3>Admin</h3>
    <p><%= link_to 'User count:', users_path %> <%= User.count %>  
     ||  <%= link_to 'Admin Page', admin_users_path, class: 'btn btn-success btn-default' %></p>
  <% else %>
    <h3>You've signed up. <%= link_to 'Products', thankyou_path %></h3>
  <% end %>
<% else %>
  <h3>Welcoming all our clients please sign up and place your orders</h3>
  <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary btn-large' %>
<% end %>
</main>